@model Role

@{
    ViewData["Title"] = "Rol Güncelle";
}

<h2 class="my-4">Rol Güncelle</h2>

<form asp-action="UpdateRole" method="post">
    <div class="form-group">
        <label>Rol No</label>
        <input type="number" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label>Rol Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
