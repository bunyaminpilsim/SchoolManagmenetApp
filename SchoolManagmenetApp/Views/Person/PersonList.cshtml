@model IEnumerable<Person>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h2 class="my-4">Kullanıcı Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Yaş</th>
            <th>Cinsiyet</th>
            <th>Rol</th>
            <th>Branş</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.Name</td>
                <td>@person.Age</td>
                <td>@person.Gender</td>
                <td>@person.Role.Name</td>
                <td>@person.Branch.Name</td>
                <td><img src="@person.ImgPath" alt="Person Image" width="100" /></td>
                <td>
                    <a href="/Person/UpdatePerson?id=@person.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/Person/DeletePerson?id=@person.Id" class="btn btn-primary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>