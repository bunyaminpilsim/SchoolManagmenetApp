@model IEnumerable<Person>

@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<h2 class="my-4">Öğrenci Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Yaş</th>
            <th>Cinsiyet</th>
            <th>Rol</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in ViewBag.Students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Gender</td>
                <td>@student.Role.Name</td>
                <td><img src="@student.ImgPath" alt="Person Image" width="100" /></td>
                <td>
                    <a href="/Person/UpdatePerson?id=@student.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/Person/DeletePerson?id=@student.Id" class="btn btn-primary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>